<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geniusgordon.ilms" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".app.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Enable background dispatching to improve delivery on non-Google Play devices -->
        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.analytics.AnalyticsService"
            android:enabled="true"
            android:exported="false" />

        <!-- Enable Google Play Store Campaign reports -->
        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.analytics.CampaignTrackingService"
            android:enabled="true" />

        <activity
            android:name=".app.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".app.main.NewestForumActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".app.main.NewestMaterialActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".app.course.CourseActivity"
            android:label="@string/title_activity_course" >
        </activity>
        <activity
            android:name=".app.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".app.course.AnnouncementDetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name=".app.course.MaterialDetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name=".app.course.HomeworkDetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name=".app.forum.ForumActivity"
            android:label="@string/title_activity_forum" >
        </activity>
        <activity
            android:name=".app.forum.PostDetailActivity"
            android:label="@string/title_activity_post_detail" >
        </activity>
        <activity android:name=".app.ActivityDispatcher" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:host="lms.nthu.edu.tw" />
                <data android:pathPrefix="/course/" />
                <data android:pathPrefix="/course.php" />
                <data android:pathPrefix="/home.php" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="ilms" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.forum.ComposeActivity"
            android:label="@string/title_activity_compose" >
        </activity>
        <activity
            android:name=".app.EnterActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.schedule.MyScheduleActivity"
            android:label="@string/title_activity_my_schedule" >
        </activity>
        <activity
            android:name=".app.schedule.SchoolScheduleActivity"
            android:label="@string/title_activity_school_schedule" >
        </activity>
    </application>

</manifest>
